<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kast.eggtimerapp.MainActivity">

    <SeekBar
        android:id="@+id/timerSeekBar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerSeekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:onClick="stopAlarm"
        app:srcCompat="@drawable/egg" />

    <Button
        android:id="@+id/startAndStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:onClick="startAndStop"
        android:text="Go!" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startAndStopButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="0:30"
        android:textSize="70sp" />

</android.widget.RelativeLayout>
